pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building the application...'
                // Replace with your build command
                sh 'make build'
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                // Replace with your test command
                sh 'make test'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying the application...'
                // Replace with your deployment command
                sh 'make deploy'
            }
        }
    }

    post {
        success {
            echo 'Pipeline succeeded!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
